<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars"
    android:fitsSystemWindows="true"
    tools:viewBindingIgnore="true"
    tools:context=".activities.infoApp">


    <ImageButton
        android:id="@+id/academics"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/academics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/geektalks"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/geektalks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="226dp"
        android:layout_height="105dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="156dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="This page can be used as a platform for students where they can share their blogposts or anything that they wish to related to tech."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/cust_diag"
        android:padding="10dp"
        android:text="All 5 in 1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="241dp"
        android:layout_height="85dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="This page has options to view daily timetable, subject and related faculty and a place to get academic announcements."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="229dp"
        android:layout_height="88dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="This option will help students to by,sell, or rent things. This will not only solve their money issues but also help them reuse things."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/thriftit"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/thriftit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="233dp"
        android:layout_height="85dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="Here you can make friends and group chats with people of similar interests and have discussions with them."
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <ImageButton
        android:id="@+id/tutorpoint"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/mygang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="215dp"
        android:layout_height="76dp"
        android:layout_marginTop="624dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="This page will let students share notes and books of the subjects they wish to."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mygang"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="596dp"
        android:background="@drawable/tutorpoint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>